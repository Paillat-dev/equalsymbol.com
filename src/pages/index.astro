import '../styles/global.css';

// Calculate years since the equal symbol was invented (1557)
const currentYear = new Date().getFullYear();
const yearsOfService = currentYear - 1557;

const symbolVariations = [
  { symbol: '=', name: 'Equals Sign', unicode: 'U+003D', html: '&#61;', alt: '61', desc: 'The fundamental symbol of mathematical equality' },
  { symbol: '≠', name: 'Not Equal To', unicode: 'U+2260', html: '&#8800;', alt: '8800', desc: 'The negation of equality' },
  { symbol: '≡', name: 'Identical To', unicode: 'U+2261', html: '&#8801;', alt: '8801', desc: 'Denotes congruence or logical equivalence' },
  { symbol: '≈', name: 'Almost Equal To', unicode: 'U+2248', html: '&#8776;', alt: '8776', desc: 'Approximately equal, for practical purposes' },
  { symbol: '≅', name: 'Approximately Equal', unicode: 'U+2245', html: '&#8773;', alt: '8773', desc: 'Geometric or isomorphic equivalence' },
  { symbol: '≆', name: 'Approximately But Not Actually Equal', unicode: 'U+2246', html: '&#8774;', alt: '8774', desc: 'Close, yet distinctly different' },
  { symbol: '≇', name: 'Neither Approximately Nor Actually Equal', unicode: 'U+2247', html: '&#8775;', alt: '8775', desc: 'Definitively not equivalent' },
  { symbol: '≔', name: 'Colon Equals', unicode: 'U+2254', html: '&#8788;', alt: '8788', desc: 'Definition or assignment' },
  { symbol: '≕', name: 'Equals Colon', unicode: 'U+2255', html: '&#8789;', alt: '8789', desc: 'Defined as (reverse)' },
  { symbol: '≖', name: 'Ring in Equal To', unicode: 'U+2256', html: '&#8790;', alt: '8790', desc: 'Correspondence with circled emphasis' },
  { symbol: '≗', name: 'Ring Equal To', unicode: 'U+2257', html: '&#8791;', alt: '8791', desc: 'Equality with orbital properties' },
  { symbol: '≘', name: 'Corresponds To', unicode: 'U+2258', html: '&#8792;', alt: '8792', desc: 'Mathematical correspondence' },
  { symbol: '≙', name: 'Estimates', unicode: 'U+2259', html: '&#8793;', alt: '8793', desc: 'Statistical estimation relation' },
  { symbol: '≚', name: 'Equiangular To', unicode: 'U+225A', html: '&#8794;', alt: '8794', desc: 'Geometric angle equivalence' },
  { symbol: '⩵', name: 'Two Consecutive Equals', unicode: 'U+2A75', html: '&#10869;', alt: '10869', desc: 'Programming equality check' },
  { symbol: '⩶', name: 'Three Consecutive Equals', unicode: 'U+2A76', html: '&#10870;', alt: '10870', desc: 'Strict type equality (JavaScript)' },
];
